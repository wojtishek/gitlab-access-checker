<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width">

	<title>{ifset title}{include title|stripHtml} | {/ifset}Gitlab access checker</title>
	<link rel="stylesheet" href="{$baseUrl}/assets/css/bootstrap.min.css">
	<link rel="stylesheet" href="{$baseUrl}/assets/css/main.css">
</head>

<body>
	<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

	<div class="container">
		<div class="row">
			<div class="col">
				{include content}
			</div>
		</div>
	</div>
	<div class="spinner d-none lds-ripple position-fixed translate-middle top-50 start-50"><div></div><div></div></div>
	{block scripts}
	<script src="{$baseUrl}/assets/js/netteForms.min.js"></script>
	<script src="{$baseUrl}/assets/js/Naja.min.js"></script>
	<script src="{$baseUrl}/assets/js/bootstrap.bundle.min.js"></script>
	<script src="{$baseUrl}/assets/js/main.js"></script>
	<script type="module" n:syntax="off">
		naja.registerExtension(new SpinnerExtension());
		document.addEventListener('DOMContentLoaded', () => naja.initialize({
			history: false,
		}));
	</script>
	{/block}
</body>
</html>
